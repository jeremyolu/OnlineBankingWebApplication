@model OnlineBanking.Data.ViewModels.AccountViewModels.CustomerDetailsViewModel

@if(User.Identity.IsAuthenticated)
{
    <div class="account-topbar">
        <div class="container">
            <div class="account-topbar-content">
                <div id="name-account-section">
                    <p class="account-topbar-name-title">Welcome back, Jeremy!</p>
                    <small class="last-logged-in-date-text">Last Logged In: @Model.CustomerLogin.LastLoggedIn</small>
                </div>
                <div id="links-account-section">
                    <ul>
                        <li><a href="/account/messages">Messages</a></li>
                        <span class="account-topbar-link-divider">|</span>
                        <li><a href="/account/dashboard">Accounts</a></li>
                        <span class="account-topbar-link-divider">|</span>
                        <li><a href="/account/transactions">Transactions</a></li>
                        <span class="account-topbar-link-divider">|</span>
                        <li><a href="/account/settings">Settings</a></li>
                        <span class="account-topbar-link-divider">|</span>
                        <li><a href="/account/help-center">Help Center</a></li>
                        <span class="account-topbar-link-divider">|</span>
                        <li><a href="/account/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="navbar main-background-color">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Online Banking", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/about">About</a></li>
                <li><a href="/news">News</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Current Accounts <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Apply New Current Account</a></li>
                        <li><a href="#">Basic Current Account</a></li>
                        <li><a href="#">Ultimate Current Account</a></li>
                        <li><a href="#">Current Account Help</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Credit Accounts <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Apply New Current Account</a></li>
                        <li><a href="#">Basic Current Account</a></li>
                        <li><a href="#">Ultimate Current Account</a></li>
                        <li><a href="#">Current Account Help</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Loans <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Apply New Loan</a></li>
                        <li><a href="#">Loans Home</a></li>
                        <li><a href="#">Loans Help</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Savings <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Basic Current Account</a></li>
                        <li><a href="#">Ultimate Current Account</a></li>
                    </ul>
                </li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/account/help-center">Help</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href="/account/login">Login</a></li>
                }
                else
                {
                    <li><a href="/account/logout">Logout</a></li>
                }
            </ul>
        </div>
    </div>
</div>
