@model OnlineBanking.Data.ViewModels.AuthenticationViewModels.RegisterViewModel

@{
    ViewBag.Title = "Apply";
}

<div id="register-page">
    <h2 class="page-heading">Apply for a Online Banking account</h2>

    <hr />

    <h4>Register with your personal details.</h4>

    <br />

    <div class="register-form-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Firstname</label>
                <p>So we know what to call you</p>
                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Firstname" } })
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Middle name(s)</label>
                <p>Just some extra bit of information for us</p>
                @Html.EditorFor(model => model.Middlenames, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Middle name (s)" } })
                @Html.ValidationMessageFor(model => model.Middlenames, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Surname</label>
                <p>Your last name for your account</p>
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Surname" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Email</label>
                <p>Your email address so we can send you information</p>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "Email", @placeholder = "Enter Email @" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Date of Birth</label>
                <p>Your birthday so we know how old you are</p>
                <input type="date" id="DOB" name="DOB" class="form-control">
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Address</label>
                <p>Your home address so we know where to send your letters</p>
                @Html.TextAreaFor(model => model.Address, new { cols = 35, @rows = 3, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Postcode</label>
                <p>Your home postcode so we know where to send your letters</p>
                @Html.EditorFor(model => model.Postcode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Postcode" } })
                @Html.ValidationMessageFor(model => model.Postcode, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Account Password</label>
                <p>Create a password for your online banking account</p>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Create Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                <div class="spacer"></div>
                <div class="spacer"></div>

                <p>Confirm password again</p>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Confirm Password" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Register Account" class="btn btn-main" />
            </div>
        }
    </div>
    <div class="help-links-container">
        <h4>Help Links</h4>
        <div class="spacer"></div>
        <a href="/account/login" class="main-link">Have an account? Login now!</a>
        <div class="spacer"></div>
        <a href="/account/register" class="main-link">Need help applying for online banking account?</a>
    </div>
</div>



