@model OnlineBanking.Data.ViewModels.AuthenticationViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div id="login-page">
    <h2 class="page-heading">Log into your Online Banking account</h2>

    <hr />

    @if (ViewBag.Message == "applicationsuccess")
    {
        <div class="registration-success-message">
            <p>Congraduations - you have successfully registered. Login now to manage view your accounts!</p>
        </div>
    }

    <h4>Login with your unique customer number and password.</h4>

    <br />

    <div class="login-form-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Customer No</label>
                <p>Your unique customer number so we know who you are.</p>
                @Html.EditorFor(model => model.CustomerNo, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Enter Customer No" } })
                @Html.ValidationMessageFor(model => model.CustomerNo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Account Password</label>
                <p>Your password for your online banking account.</p>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Enter Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Login Securely" class="btn btn-main" />
            </div>
        }
    </div>
    <div class="help-links-container">
        <h4>Help Links</h4>
        <div class="spacer"></div>
        <a href="/account/forgotpassword" class="main-link">Forgotten your account password?</a>
        <div class="spacer"></div>
        <a href="/account/register" class="main-link">No account? Register now!</a>
        <div class="spacer"></div>
        <a href="/account/testaccounts" class="main-link">Login with test accounts</a>
    </div>
</div>




